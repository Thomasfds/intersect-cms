{% extends "html.twig" %}

{% block title %}
	{{ pageTitle }}
{% endblock %}

{% block seo %}
	<!-- Primary Meta Tags -->
	<meta name="title" content="{{pageTitle}}">
	<meta
	name="description" content="DragonBallZ: Shukuteki, jeu retrancant l'histoire originale de l'animé en jeu MMORPG 2D, le jeu n'attend plus que vous !">

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website">
	<meta property="og:url" content="{{current_url}}">
	<meta property="og:title" content="{{pageTitle}}">
	<meta property="og:description" content="DragonBallZ: Shukuteki, jeu retrancant l'histoire originale de l'animé en jeu MMORPG 2D, le jeu n'attend plus que vous !">
	<meta
	property="og:image" content="{{ globalAssetsPath }}seo/seo.png">

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image">
	<meta property="twitter:url" content="{{current_url}}">
	<meta property="twitter:title" content="{{pageTitle}}">
	<meta property="twitter:description" content="DragonBallZ: Shukuteki, jeu retrancant l'histoire originale de l'animé en jeu MMORPG 2D, le jeu n'attend plus que vous !">
	<meta property="twitter:image" content="{{ globalAssetsPath }}seo/seo.png">
{% endblock %}

{% block content %}
	<h1>{{ lang['leaders'] }}</h1>
	<ul id="breadcrump">
		<li>
			<a href="{{ url_for('home') }}">{{ lang['home'] }}</a>
		</li>
		<li>{{ lang['leaders'] }}</li>
	</ul>

	<div id="middle">

		<h2>{{ lang['leader_pve_title'] }}</h2>
		<table class="ladder">
			<thead>
				<tr>
					<th width="50px" class="c">#</th>
					<th>{{ lang['leader_player_name'] }}</th>
					<th class="c">{{ lang['leader_player_level'] }}</th>
					<th class="r">{{ lang['leader_player_exp'] }}</th>
				</tr>
			</thead>
			<tbody>
				{% for player in players %}
					{% set position = position + 1 %}
					<tr>
						<td class="c">
							<span class="rang">{{ position }}</span>
						</td>
						<td>{{ player.name }}</td>
						<td class="c">{{ player.level }}</td>
						<td class="c">{{ player.exp }}/{{player.expNext}}</td>
					</tr>
                    {% else %}
                        <div class="alert alert-info">
                            Aucune information disponible.
                        </div>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
