{% extends "html.twig" %}
{% block title %}{{ pageTitle }}{% endblock %}
{% block content %}

	<h1>{{ pageTitle }}</h1>
	<ul id="breadcrump">
		<li>
			<a href="{{ url_for('home') }}">{{ lang['home'] }}</a>
		</li>
		<li>{{ pageTitle }}</li>
	</ul>
	<div id="middle">
		{% if content is defined %}
			<p>{{content}}</p>
		{% else %}
			<form method="POST">
				<div class="form-group">
					<label for="username">{{ lang['login_account'] }}</label>
					<input type="text" name="username" id="username" class="form-control w-100">
				</div>

				<div class="form-group">
					<label for="email">{{ lang['my_account_email'] }}</label>
					<input type="text" name="email" id="email" class="form-control w-100">
				</div>

				<button type="sumbit" class="customBTN w-100">{{lang['password_reset_validate']}}</button>
			</form>
		{% endif %}


	</div>
{% endblock %}
